<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

  <!-- ============ -->
  <!-- Popup Themes -->
  <!-- ============ -->
  <eat-comment />

  <style name="Gm.PopupMenu.Dark" parent="@style/Widget.AppCompat.PopupMenu">
    <item name="android:popupBackground">@drawable/gm_bg_popup_dark</item>
    <item name="android:overlapAnchor" tools:ignore="NewApi">true</item>
    <item name="overlapAnchor">true</item>
  </style>

  <style name="Gm.PopupMenu.Light" parent="@style/Widget.AppCompat.Light.PopupMenu">
    <item name="android:popupBackground">@drawable/gm_bg_popup_light</item>
    <item name="android:overlapAnchor" tools:ignore="NewApi">true</item>
    <item name="overlapAnchor">true</item>
  </style>

  <!-- ============= -->
  <!-- Widget Themes -->
  <!-- ============= -->
  <eat-comment />

  <style name="Gm.ColoredButton" parent="@style/Widget.AppCompat.Button">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <!-- ============= -->
  <!-- Dialog Themes -->
  <!-- ============= -->
  <eat-comment />

  <style name="Gm.AlertDialog.Theme.Dark" parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorAccent">@color/gm_accent</item>
    <item name="colorPrimary">@color/gm_primary</item>
  </style>

  <style name="Gm.AlertDialog.Theme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/gm_accent</item>
    <item name="colorPrimary">@color/gm_primary</item>
  </style>

  <!-- https://code.google.com/p/android/issues/detail?id=220699 -->
  <eat-comment />
  <style name="Gm.AlertDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/gm_accent</item>
  </style>

</resources>